{
  "manifest_version": 3,
  "name": "Date Info Button Extension",
  "version": "1.0",
  "description": "Adds an info button next to detected dates on a webpage.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["http://localhost/*", "http://127.0.0.1/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
